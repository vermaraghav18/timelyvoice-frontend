{
  "version": 2,
  "redirects": [
    {
      "source": "/article/:slug/",
      "destination": "/article/:slug",
      "permanent": true
    },
    {
      "source": "/category/:slug/",
      "destination": "/category/:slug",
      "permanent": true
    },
    {
      "source": "/tag/:tag/",
      "destination": "/tag/:tag",
      "permanent": true
    }
  ],
  "rewrites": [


    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": ".*(Googlebot|Mediapartners-Google).*"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/home"
    },
    {
      "source": "/",
      "has": [
        {
          "type": "query",
          "key": "_bot",
          "value": "1"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/home"
    },

   
    {
      "source": "/top-news",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": ".*(Googlebot|Mediapartners-Google).*"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/top-news"
    },
    {
      "source": "/top-news",
      "has": [
        {
          "type": "query",
          "key": "_bot",
          "value": "1"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/top-news"
    },

    
    {
      "source": "/article/:slug",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": ".*(Googlebot|Mediapartners-Google).*"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/article/:slug"
    },
    {
      "source": "/article/:slug",
      "has": [
        {
          "type": "query",
          "key": "_bot",
          "value": "1"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/article/:slug"
    },

  
    {
      "source": "/tag/:tag",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": ".*(Googlebot|Mediapartners-Google).*"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/tag/:tag"
    },
    {
      "source": "/tag/:tag",
      "has": [
        {
          "type": "query",
          "key": "_bot",
          "value": "1"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/tag/:tag"
    },


    {
      "source": "/api/:path*",
      "destination": "https://timelyvoice-backend.onrender.com/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://timelyvoice-backend.onrender.com/uploads/:path*"
    },

    {
      "source": "/robots.txt",
      "destination": "https://timelyvoice-backend.onrender.com/robots.txt"
    },
    {
      "source": "/sitemap.xml",
      "destination": "https://timelyvoice-backend.onrender.com/sitemap.xml"
    },
    {
      "source": "/news-sitemap.xml",
      "destination": "https://timelyvoice-backend.onrender.com/news-sitemap.xml"
    },
    {
      "source": "/rss.xml",
      "destination": "https://timelyvoice-backend.onrender.com/rss.xml"
    },
    {
      "source": "/rss/:path*",
      "destination": "https://timelyvoice-backend.onrender.com/rss/:path*"
    },
    {
      "source": "/ads.txt",
      "destination": "https://timelyvoice-backend.onrender.com/ads.txt"
    },

    {
      "source": "/ssr/:path*",
      "destination": "https://timelyvoice-backend.onrender.com/ssr/:path*"
    },


    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
