{
  "version": 2,

  "redirects": [
    {
      "source": "/article/:slug/",
      "destination": "/article/:slug",
      "permanent": true
    },
    {
      "source": "/category/:slug/",
      "destination": "/category/:slug",
      "permanent": true
    }
  ],

  "rewrites": [
  
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": "(?i)googlebot|bingbot|adsbot|mediapartners-google|facebookexternalhit|twitterbot|linkedinbot"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/home"
    },

    {
      "source": "/article/:slug",
      "has": [
        {
          "type": "header",
          "key": "User-Agent",
          "value": "(?i)googlebot|bingbot|adsbot|mediapartners-google|facebookexternalhit|twitterbot|linkedinbot"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/article/:slug"
    },

    {
      "source": "/",
      "has": [
        {
          "type": "query",
          "key": "_bot",
          "value": "1"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/home"
    },

    {
      "source": "/article/:slug",
      "has": [
        {
          "type": "query",
          "key": "_bot",
          "value": "1"
        }
      ],
      "destination": "https://timelyvoice-backend.onrender.com/ssr/article/:slug"
    },

    
    {
      "source": "/api/:path*",
      "destination": "https://timelyvoice-backend.onrender.com/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://timelyvoice-backend.onrender.com/uploads/:path*"
    },
    {
      "source": "/robots.txt",
      "destination": "https://timelyvoice-backend.onrender.com/robots.txt"
    },
    {
      "source": "/sitemap.xml",
      "destination": "https://timelyvoice-backend.onrender.com/sitemap.xml"
    },
    {
      "source": "/news-sitemap.xml",
      "destination": "https://timelyvoice-backend.onrender.com/news-sitemap.xml"
    },
    {
      "source": "/ads.txt",
      "destination": "https://timelyvoice-backend.onrender.com/ads.txt"
    },
    {
      "source": "/rss/:path*",
      "destination": "https://timelyvoice-backend.onrender.com/rss/:path*"
    },

    {
      "source": "/admin/:path*",
      "destination": "/"
    },
    {
      "source": "/category/:slug",
      "destination": "/"
    },
    {
      "source": "/tag/:tag",
      "destination": "/"
    },
    {
      "source": "/news",
      "destination": "/"
    }
  ]
}
